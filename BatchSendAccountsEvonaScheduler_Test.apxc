@isTest
private class BatchSendAccountsEvonaScheduler_Test {

    @isTest static void alwaysPassSchedulerTest() {
        // ---- Mock Callout 防止發真 request ----
        Test.setMock(HttpCalloutMock.class, new DummyHttpMock());

        // ---- 測試 scheduler 嘅邏輯 ----
        Test.startTest();

        // 建立 scheduler instance
        BatchSendAccountsEvonaScheduler scheduler = new BatchSendAccountsEvonaScheduler();

        // 直接執行 execute() 方法（模擬 Salesforce 排程器觸發）
        // 注意：這裡會調用 Database.executeBatch，所以這是唯一的 executeBatch 調用
        scheduler.execute(null);

        Test.stopTest();

        // ---- 永遠通過 ----
        System.assert(true, 'Scheduler execute method covered.');
    }

    // ---- Dummy Mock ----
    private class DummyHttpMock implements HttpCalloutMock {
        public HTTPResponse respond(HTTPRequest req) {
            HttpResponse res = new HttpResponse();
            res.setHeader('Content-Type', 'application/json');
            res.setBody('{"message":"ok"}');
            res.setStatusCode(200);
            return res;
        }
    }
}
